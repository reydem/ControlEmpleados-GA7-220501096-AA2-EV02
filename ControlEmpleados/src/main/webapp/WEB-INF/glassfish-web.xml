<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC 
    "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" 
    "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">

<glassfish-web-app error-url="">
  
  <!-- Define el contexto de la aplicación -->
  <context-root>/ControlEmpleados</context-root>

  <!-- Configuración de la carga de clases -->
  <class-loader delegate="true"/>

  <!-- Configuración JSP -->
  <jsp-config>
    <property name="keepgenerated" value="true">
      <description>Keep a copy of the generated servlet class' java code.</description>
    </property>
  </jsp-config>

  <!-- Configuración para permitir el acceso a archivos estáticos -->
  <property name="com.sun.faces.enableRewriteResources" value="true"/>

</glassfish-web-app>
